@model Livraria.Models.Livro

@{
    ViewData["Title"] = "Detalhes do Livro";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-secondary text-white">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Autor</dt>
            <dd class="col-sm-9">@Model.Autor</dd>

            <dt class="col-sm-3">Gênero</dt>
            <dd class="col-sm-9">@Model.Genero</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>

            <dt class="col-sm-3">Quantidade em Estoque</dt>
            <dd class="col-sm-9">@Model.QuantidadeEstoque</dd>

            <dt class="col-sm-3">Capa</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.CapaUrl))
                {
                    <img src="@Model.CapaUrl" alt="Capa do livro" class="img-thumbnail" style="max-width:150px;">
                }
                else
                {
                    <span class="text-muted">Sem capa</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
