@model IEnumerable<Livraria.Models.Livro>

@{
    ViewData["Title"] = "Gerenciar Livros";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@ViewData["Title"]</h4>
        <a asp-action="Create" class="btn btn-light btn-sm">Adicionar Livro</a>
    </div>

    <div class="card-body">
        @if (!Model.Any())
        {
            <p class="text-muted">Nenhum livro cadastrado ainda.</p>
        }
        else
        {
            <div class="table-responsive">
                <form asp-action="Index" method="get" class="d-flex">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                           class="form-control form-control-sm me-2" placeholder="Buscar livro..." />
                    <button type="submit" class="btn btn-light btn-sm">Buscar</button>
                </form>

                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                            <th>@Html.DisplayNameFor(model => model.Autor)</th>
                            <th>@Html.DisplayNameFor(model => model.Genero)</th>
                            <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                            <th>@Html.DisplayNameFor(model => model.QuantidadeEstoque)</th>
                            <th>Capa</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Titulo</td>
                                <td>@item.Autor</td>
                                <td>@item.Genero</td>
                                <td>@item.ISBN</td>
                                <td>@item.QuantidadeEstoque</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CapaUrl))
                                    {
                                        <img src="@item.CapaUrl" alt="Capa" style="width: 50px; height: auto; border-radius: 4px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem capa</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Detalhes</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
