@model Livraria.Models.Emprestimo

@{
    ViewData["Title"] = "Detalhes do Empréstimo";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-secondary text-white">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Livro</dt>
            <dd class="col-sm-9">@Model.Livro?.Titulo</dd>

            <dt class="col-sm-3">Funcionário</dt>
            <dd class="col-sm-9">@Model.Funcionario?.Nome</dd>

            <dt class="col-sm-3">Data do Empréstimo</dt>
            <dd class="col-sm-9">@Model.DataEmprestimo.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Data de Devolução</dt>
            <dd class="col-sm-9">@Model.DataDevolucao?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
