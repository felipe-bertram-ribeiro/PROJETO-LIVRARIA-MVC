@model Livraria.Models.Emprestimo

@{
    ViewData["Title"] = "Novo Empréstimo";
}

<h1>Novo Empréstimo</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Livro -->
            <div class="mb-3">
                <label asp-for="LivroId" class="form-label"></label>
                <select asp-for="LivroId" class="form-control" asp-items="@(ViewData["LivroId"] as SelectList)">
                    <option value="0">-- Selecione um livro --</option>
                </select>
                <span asp-validation-for="LivroId" class="text-danger"></span>
            </div>

            <!-- Funcionário -->
            <div class="mb-3">
                <label asp-for="FuncionarioId" class="form-label"></label>
                <select asp-for="FuncionarioId" class="form-control" asp-items="@(ViewData["FuncionarioId"] as SelectList)">
                    <option value="0">-- Selecione um funcionário --</option>
                </select>
                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>

            <!-- Cliente -->
            <div class="mb-3">
                <label asp-for="ClienteId" class="form-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="@(ViewData["ClienteId"] as SelectList)">
                    <option value="0">-- Selecione um cliente --</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <!-- Data do Empréstimo -->
            <div class="mb-3">
                <label asp-for="DataEmprestimo" class="form-label"></label>
                <input asp-for="DataEmprestimo" class="form-control" type="date" />
                <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
            </div>

            <!-- Data Prevista de Devolução -->
            <div class="mb-3">
                <label asp-for="DataPrevistaDevolucao" class="form-label"></label>
                <input asp-for="DataPrevistaDevolucao" class="form-control" type="date" />
                <span asp-validation-for="DataPrevistaDevolucao" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
