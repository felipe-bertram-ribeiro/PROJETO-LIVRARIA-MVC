@model IEnumerable<Livraria.Models.Emprestimo>

@{
    ViewData["Title"] = "Gerenciar Empréstimos";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@ViewData["Title"]</h4>
        <a asp-action="Create" class="btn btn-light btn-sm">Adicionar Empréstimo</a>
    </div>

    <div class="card-body">
        @if (!Model.Any())
        {
            <p class="text-muted">Nenhum empréstimo registrado.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Livro</th>
                            <th>Funcionário</th>
                            <th>Data do Empréstimo</th>
                            <th>Data de Devolução</th>
                            <th>Status</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Livro?.Titulo</td>
                                <td>@item.Funcionario?.Nome</td>
                                <td>@item.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                                <td>@item.DataDevolucao?.ToString("dd/MM/yyyy")</td>
                                <td>@item.Status</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Detalhes</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
