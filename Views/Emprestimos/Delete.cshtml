@model Livraria.Models.Emprestimo

@{
    ViewData["Title"] = "Excluir Empréstimo";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Livro</dt>
            <dd class="col-sm-9">@Model.Livro?.Titulo</dd>

            <dt class="col-sm-3">Funcionário</dt>
            <dd class="col-sm-9">@Model.Funcionario?.Nome</dd>

            <dt class="col-sm-3">Data do Empréstimo</dt>
            <dd class="col-sm-9">@Model.DataEmprestimo.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Data de Devolução</dt>
            <dd class="col-sm-9">@Model.DataDevolucao?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>
