@model Livraria.Models.Emprestimo
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Editar Empréstimo";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-warning text-white">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="LivroId" class="form-label"></label>
                <select asp-for="LivroId" class="form-control" asp-items="@(ViewData["LivroId"] as SelectList)"></select>
            </div>

            <div class="mb-3">
                <label asp-for="FuncionarioId" class="form-label"></label>
                <select asp-for="FuncionarioId" class="form-control" asp-items="@(ViewData["FuncionarioId"] as SelectList)"></select>
            </div>

            <div class="mb-3">
                <label asp-for="DataEmprestimo" class="form-label"></label>
                <input asp-for="DataEmprestimo" class="form-control" type="date" />
                <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataPrevistaDevolucao" class="form-label"></label>
                <input asp-for="DataPrevistaDevolucao" class="form-control" type="date" />
                <span asp-validation-for="DataPrevistaDevolucao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataDevolucao" class="form-label"></label>
                <input asp-for="DataDevolucao" class="form-control" type="date" />
                <span asp-validation-for="DataDevolucao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
