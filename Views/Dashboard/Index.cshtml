@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">Dashboard</h1>

<!-- Seção 1: Estatísticas -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Clientes</h5>
                <p class="card-text fs-4">@ViewBag.TotalClientes</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Funcionários</h5>
                <p class="card-text fs-4">@ViewBag.TotalFuncionarios</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Livros</h5>
                <p class="card-text fs-4">@ViewBag.TotalLivros</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">Empréstimos em andamento</h5>
                <p class="card-text fs-4">@ViewBag.EmprestimosAndamento</p>
            </div>
        </div>
    </div>
</div>

<!-- Seção 2: Últimos Clientes -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Últimos Clientes</h4>
        <a asp-controller="Clientes" asp-action="Create" class="btn btn-light btn-sm">Adicionar Cliente</a>
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Contato</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in ViewBag.UltimosClientes)
                {
                    <tr>
                        <td>@cliente.Nome</td>
                        <td>@cliente.CPF</td>
                        <td>@cliente.NumeroContato</td>
                        <td>@cliente.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Seção 3: Últimos Empréstimos -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white">
        <h4 class="mb-0">Últimos Empréstimos</h4>
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Cliente</th>
                    <th>Livro</th>
                    <th>Data Empréstimo</th>
                    <th>Data Prevista Devolução</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in ViewBag.UltimosEmprestimos)
                {
                    <tr>
                        <td>@e.Cliente?.Nome</td>
                        <td>@e.Livro?.Titulo</td>
                        <td>@e.DataEmprestimo.ToShortDateString()</td>
                        <td>@e.DataPrevistaDevolucao.ToShortDateString()</td>
                        <td>@e.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Seção 4: Últimos Livros -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white">
        <h4 class="mb-0">Últimos Livros</h4>
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>ISBN</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in ViewBag.UltimosLivros)
                {
                    <tr>
                        <td>@l.Titulo</td>
                        <td>@l.Autor</td>
                        <td>@l.ISBN</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
